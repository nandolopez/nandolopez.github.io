---
interface Props {
	date: Date;
}

const { date } = Astro.props;
const finalDate = new Date(date)
---

<time datetime={finalDate.toString()} class="bg-teal-600 font-bold max-h-8 mt-8 p-1 rounded-lg text-center text-white w-48">
	{
		finalDate.toLocaleDateString('en-uk', {
			day: 'numeric',
			month: 'long',
			year: 'numeric',
		})
	}
</time>
