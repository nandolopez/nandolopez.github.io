---
import Layout from '../../layouts/default.astro'

interface Props {
  info: any;
}

const { info } = Astro.props;
---
<Layout
  title={info.seo.title}
  description={info.seo.description}
  publication_date={info.seo.date}
  index={info.seo.index}
  thumbnail="/public/svg_social/Logo.svg"
  language={info.seo.language}
>

<div
  class="flex flex-col gap-4 justify-around items-center mb-4 md:flex-row px-8 md:p-0 w-full"
>
  <article class="flex flex-col gap-8 justify-center my-auto items-center justify-item">
    <h1 class="text-4xl font-bold">{info.i18n.Title}</h1>
    <h2 class="text-3xl">{info.i18n.LongDescription}</h2>
    <div
      class="flex flex-col gap-6 justify-around md:flex-col md:items-start xl:flex-row"
    >
    {
      info.i18n.links.map((link: any)=>(
      <a
            href={link.href}
            class="bg-gradient-to-r from-cyan-500 to-indigo-900 hover:from-indigo-900 hover:to-cyan-500 flex font-bold text-center text-white rounded-md px-4 py-2"
            >
              {link.text}
          </a>

      ))
    }
    </div>
  </article>
  <article class="flex h-full justify-center items-center">
    <img src="https://picsum.photos/200/300" class="block h-auto" alt="" />
  </article>
</div>
</Layout>
