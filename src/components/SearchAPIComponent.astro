---
import { getCollection } from "astro:content";

interface Props {
  language: string;
}

const { language } = Astro.props;

//Get all posts for
const Posts = (
  await getCollection(
    "blog",
    (entry: any) => entry.data.language === language
  )
).map((post: any) => {
  const data = post.data;
  return {
    title: data.title,
    description: data.description,
    slug: post.slug,
  };
})

;


---
{JSON.stringify(Posts)}