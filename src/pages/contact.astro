---
import Layout from "../layouts/default.astro";
import { DB_SocialMedia } from "@/db/DB_SocialMedia";
---

<Layout
  title="Fernando LÃ³pez de Lerma Portfolio"
  description="Lorem ipsum dolor sit amet"
  pubDate={new Date()}
  index={true}
>
  <h2 class="text-center w-full">My Social media links</h2>
  <div
    class="flex flex-col flex-wrap gap-4 justify-around md:flex-row md:w-2/3 mx-auto w-full"
  >
    {
      DB_SocialMedia.map((link: any) => (
        <article class="glassmorph rounded-md md:w-1/4 md:h-56 w-full">
          <a
            href={link.link}
            class="flex items-center flex-col gap-4 h-full justify-center md:justify-between p-8 text-center w-full "
          >
            <img
              src={link.icon}
              alt={link.alt}
              class="w-12 md:w-20 md:m-auto"
            />
            <span class="text-2xl my-auto md:mb-4">{link.alt}</span>
          </a>
        </article>
      ))
    }
  </div>
</Layout>
