---
import { DB_Topics } from "@/db/TopicsDB";
import Image from "astro/components/Image.astro";
const Topics = DB_Topics;
---

<div class="bg-gray-900/20 backdrop-blur p-4 rounded-2xl w-full">
    <ul class="menu menu-horizontal rounded-box w-full">
        <li>
            <a
                href="/blog"
                class="flex items-center tooltip w-auto h-16 rounded-2xl text-white"
                class:list={{'bg-blue-950/50': Astro.url.pathname === '/blog'}}
                data-tip="Details">All technoligies</a>
        </li>
        {
            Topics.map((topic) => (
                <li>
                    <a
                        href={`/topics/${topic.Topic}`}
                        class="tooltip size-16 rounded-2xl"
                        class:list={{'bg-blue-950/50': Astro.url.pathname === `/topics/${topic.Topic}`}}
                        data-tip="Details"
                    >
                        <Image
                            src={topic.Image || ''}
                            alt={topic.Topic}
                            width={50}
                            height={50}
                            class="block size-14"
                        />
                    </a>
                </li>
            ))
        }
    </ul>
</div>
